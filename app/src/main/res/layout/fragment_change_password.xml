<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:moi="http://schemas.android.com/apk/res-auto"
    tools:context="moises.com.appcoer.ui.fragments.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_max_global">

        <moises.com.appcoer.ui.view.InputTextView
            android:id="@+id/itv_dni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            moi:iconImage="@drawable/svg_lock"
            moi:hint="DNI"
            android:inputType="textPassword"/>

        <moises.com.appcoer.ui.view.InputTextView
            android:id="@+id/itv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            moi:iconImage="@drawable/svg_email"
            moi:hint="@string/email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/margin_min_global"/>

        <moises.com.appcoer.ui.view.InputTextView
            android:id="@+id/itv_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            moi:iconImage="@drawable/svg_lock"
            moi:hint="New password"
            android:inputType="textPassword"/>

        <moises.com.appcoer.ui.view.InputTextView
            android:id="@+id/itv_repeat_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            moi:iconImage="@drawable/svg_lock"
            moi:hint="Repeat new password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/b_login"
            style="@style/ButtonCustom"
            android:layout_marginTop="@dimen/margin_max_global"
            android:text="Ok" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
