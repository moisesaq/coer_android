<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moi="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium_global">

        <LinearLayout
            android:id="@+id/ly_news"
            style="@style/StyleMenuContainer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_news_256"/>

            <TextView
                style="@style/TextViewMedium"
                android:textSize="25dp"
                android:text="Últimas noticias"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="@dimen/margin_medium_global"/>

        </LinearLayout>

        <View
            style="@style/StyleDivideVertical"
            android:layout_marginLeft="90dp"/>

        <LinearLayout
            android:id="@+id/ly_courses"
            style="@style/StyleMenuContainer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_course_256"/>

            <TextView
                style="@style/TextViewMedium"
                android:textSize="25dp"
                android:text="Cursos"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="@dimen/margin_medium_global"/>

        </LinearLayout>

        <View
            style="@style/StyleDivideVertical"
            android:layout_marginLeft="90dp"/>

        <LinearLayout
            android:id="@+id/ly_account"
            style="@style/StyleMenuContainer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_account_256"/>

            <TextView
                style="@style/TextViewMedium"
                android:textSize="25dp"
                android:text="Estado de cuentas"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="@dimen/margin_medium_global"/>

        </LinearLayout>

        <View
            style="@style/StyleDivideVertical"
            android:layout_marginLeft="90dp"/>

        <LinearLayout
            android:id="@+id/ly_lodging_house"
            style="@style/StyleMenuContainer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_timbues_256"/>

            <TextView
                style="@style/TextViewMedium"
                android:textSize="20dp"
                android:text="Alojamiento Complejo Colón\n\'Los Timbues'"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="@dimen/margin_medium_global"/>

        </LinearLayout>

        <View
            style="@style/StyleDivideVertical"
            android:layout_marginLeft="90dp"/>

        <LinearLayout
            android:id="@+id/ly_timbue"
            style="@style/StyleMenuContainer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_timbues_256"/>

            <TextView
                style="@style/TextViewMedium"
                android:textSize="20dp"
                android:text="Alojamiento Sede COER\nParaná"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="@dimen/margin_medium_global"/>

        </LinearLayout>

        <View
            style="@style/StyleDivideVertical"
            android:layout_marginLeft="90dp"/>

        <LinearLayout
            android:id="@+id/ly_method_payment"
            style="@style/StyleMenuContainer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_method_payment_256"/>

            <TextView
                style="@style/TextViewMedium"
                android:textSize="25dp"
                android:text="Medios de pago"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="@dimen/margin_medium_global"/>

        </LinearLayout>

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>