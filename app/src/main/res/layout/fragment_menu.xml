<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium_global">

        <android.support.v7.widget.CardView
            style="@style/HomeCardView"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false">
            <LinearLayout
                android:id="@+id/ly_news"
                style="@style/HomeLinearLayout">
                <ImageView
                    style="@style/HomeImageView"
                    android:src="@drawable/svg_newspaper"/>
                <TextView
                    style="@style/HomeTextView"
                    android:text="Últimas noticias"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/HomeCardView"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false">
            <LinearLayout
                android:id="@+id/ly_courses"
                style="@style/HomeLinearLayout">
                <ImageView
                    style="@style/HomeImageView"
                    android:src="@drawable/svg_lead_pencil"/>
                <TextView
                    style="@style/HomeTextView"
                    android:text="Cursos"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/HomeCardView"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/ly_account"
                style="@style/HomeLinearLayout">
                <ImageView
                    style="@style/HomeImageView"
                    android:src="@drawable/svg_account_circle"/>
                <TextView
                    style="@style/HomeTextView"
                    android:text="Estado de cuentas"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/HomeCardView"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false">
            <LinearLayout
                android:id="@+id/ly_lodging_house"
                style="@style/HomeLinearLayout">
                <ImageView
                    style="@style/HomeImageView"
                    android:src="@drawable/svg_home_modern"/>
                <TextView
                    style="@style/HomeTextView"
                    android:text="Alojamiento Complejo Colón\n\'Los Timbues'"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/HomeCardView"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false">
            <LinearLayout
                android:id="@+id/ly_timbue"
                style="@style/HomeLinearLayout">
                <ImageView
                    style="@style/HomeImageView"
                    android:src="@drawable/svg_home_modern"/>
                <TextView
                    style="@style/HomeTextView"
                    android:text="Alojamiento Sede COER\nParaná"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/HomeCardView"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false">
            <LinearLayout
                android:id="@+id/ly_method_payment"
                style="@style/HomeLinearLayout">
                <ImageView
                    style="@style/HomeImageView"
                    android:src="@drawable/svg_credit_card"/>
                <TextView
                    style="@style/HomeTextView"
                    android:text="Medios de pago"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>