<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="moises.com.appcoer.ui.fragments.CourseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_course"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/example_coer" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextViewMedium"
                    android:maxLines="1"
                    android:text="Example"
                    android:layout_marginTop="@dimen/margin_medium_global"
                    android:paddingLeft="@dimen/padding_medium_global"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium_global">
                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/TextViewSmall"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="20/03/2017" />

                    <TextView
                        android:id="@+id/tv_cost"
                        style="@style/TextViewSmall"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="$ 1200" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ly_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_discount"
                        style="@style/TextViewSmall"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="-10%"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_discount_to_date"
                        style="@style/TextViewSmall"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Hasta 5 de abril, 2017"
                        android:visibility="gone"/>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">
            <WebView
                android:id="@+id/wv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_medium_global"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
