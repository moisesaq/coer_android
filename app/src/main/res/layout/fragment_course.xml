<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="moises.com.appcoer.ui.fragments.NewsListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_course"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/example_coer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Example"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/TextViewSmall"
                android:maxLines="1"
                android:text="20/03/2017" />

            <TextView
                android:id="@+id/tv_cost"
                style="@style/TextViewSmall"
                android:maxLines="1"
                android:text="Costo: 1200 Pesos" />

            <TextView
                android:id="@+id/tv_discount"
                style="@style/TextViewSmall"
                android:maxLines="1"
                android:text="10%" />

            <TextView
                android:id="@+id/tv_discount_to_date"
                style="@style/TextViewSmall"
                android:maxLines="1"
                android:text="Until April 1, 2017"/>

            <TextView
                android:id="@+id/tv_content"
                style="@style/TextViewSmall"
                android:text="Large user information, to explain user skills and more that's interesting for other users" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
