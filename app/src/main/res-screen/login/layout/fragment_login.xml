<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="moises.com.appcoer.ui.login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_margin="@dimen/margin_max">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/civ_image_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_medium"
            app:siBorderWidth="2dp"
            app:siBorderColor="@color/colorPrimaryLight"/>

        <moises.com.appcoer.ui.customviews.InputTextView
            android:id="@+id/itv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconImage="@drawable/svg_email"
            app:hint="@string/registration_number"
            android:text=""
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/margin_min"/>

        <moises.com.appcoer.ui.customviews.InputTextView
            android:id="@+id/itv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconImage="@drawable/svg_lock"
            app:hint="@string/password"
            android:text=""
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/b_login"
            style="@style/ButtonCustom"
            android:layout_marginTop="@dimen/margin_max"
            android:text="@string/log_in" />

        <Button
            android:id="@+id/b_guest"
            style="@style/ButtonCustom"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/guest" />

        <TextView
            android:id="@+id/tv_forgot_password"
            style="@style/TextViewSmall"
            android:text="@string/forgot_password"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="?selectableItemBackground"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>
