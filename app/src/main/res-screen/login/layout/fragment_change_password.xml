<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_max"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium">

    <moises.com.appcoer.ui.customviews.InputTextView
        android:id="@+id/itv_dni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:visibility="gone"
        moi:hint="@string/dni"
        moi:iconImage="@drawable/svg_lock" />

    <moises.com.appcoer.ui.customviews.InputTextView
        android:id="@+id/itv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_min"
        android:inputType="textEmailAddress"
        moi:hint="@string/email"
        moi:iconImage="@drawable/svg_email" />

    <moises.com.appcoer.ui.customviews.InputTextView
        android:id="@+id/itv_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        moi:hint="@string/new_password"
        moi:iconImage="@drawable/svg_lock" />

    <moises.com.appcoer.ui.customviews.InputTextView
        android:id="@+id/itv_repeat_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        moi:hint="@string/repeat_new_password"
        moi:iconImage="@drawable/svg_lock" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/ButtonCustom"
        android:layout_marginTop="@dimen/margin_max"
        android:text="@string/confirm" />
</LinearLayout>